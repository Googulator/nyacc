(define-ffi-module (ffi cairo)
  #:pkg-config "cairo"
  #:include '("cairo.h"
	      ;;"cairo-ft.h"		; /usr/include rat's nest
	      ;;"cairo-gobject.h"	; /usr/include rat's nest
	      "cairo-pdf.h"
	      ;;"cairo-ps.h"
	      ;;"cairo-quartz-image.h"
	      ;;"cairo-quartz.h"
	      "cairo-svg.h"
	      ;;"cairo-tee.h"
	      ;;"cairo-xml.h"
	      )
  ;; the following are bent pipe to scm-module
  #:export (M_PI M_2PI make-cairo-unit-matrix)
  )

(define-public cairo_raster_source_acquire_func_t*-desc
  (bs:pointer  cairo_raster_source_acquire_func_t-desc))
